extends ../layout

block content
  section.login
    form.login__form.form(action=`/login`, method=`post`)
      .login__title
        a.login__link(href=`/register`) Регистрация
        h2 Вход
      .form__field.login__field
        input#user-email.js-field(type=`email`, name=`email`, maxlength=C.MaxValue.EMAIL, required=``, value=payload.email)
        label(for=`user-email`) Эл. почта
        span Обязательное поле
      +errorMessage(errors.email)
      .form__field.login__field
        input#user-password.js-field(type=`password`, name=`password`, minlength=C.MinValue.PASSWORD, maxlength=C.MaxValue.PASSWORD, required=``)
        label(for=`user-password`) Пароль
        span Обязательное поле
      +errorMessage(errors.password)
      button.login__button.btn.btn--medium.js-button(type=`submit`, disabled=``) Войти
